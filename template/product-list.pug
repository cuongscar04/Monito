                                    a(href="#")
                                        img(src=pet.image, alt=pet.title)
                                .section-2__content
                                    h3.section-2__title 
                                        a(href="#") #{pet.title}
                                    .section-2__info
                                        .section-2__info-item Giống: <span>#{pet.gender}</span>
                                        .section-2__info-item Tuổi: <span>#{pet.age}</span>
                                    .section-2__price #{pet.price} 
            
