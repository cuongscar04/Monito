extends layouts/default.pug 

block title 
    title Danh sách sản phẩm

block main 

    //- Breadcrumb
    .breadcrumb 
        .container 
            ul.breadcrumb__list 
                li.breadcrumb__item 
                    a(href="index.html" class="breadcrumb__link") Trang chủ
                li.breadcrumb__item 
                    a(href="#" class="breadcrumb__link") Chó
                li.breadcrumb__item 
                    a(href="#" class="breadcrumb__link") Chó nhỏ
    //- End Breadcrumb

    //- Section 3
    include partials/section-3.pug 
    //- End Section 3

    //- Layout product
    .layout-product 
        .container 
            .layout-product__wrap
                .layout-product__left
                    .filters
                        .filters__title 
                            img(src="assets/images/icon-filters.svg", alt="")
                            span Bộ lọc
                        .filters__list 
                            .filters__item 
                                .filters__item-title Giống 
                                .filters__item-box  
                                    .filters__item-choose
                                        input(type="checkbox" name="giong" value="Đực" id="duc")
                                        label(for="duc") Đực
                                    .filters__item-choose 
                                        input(type="checkbox" name="giong" value="Cái" id="cai")
                                        label(for="caic") Cái

                        .filters__list 
                            .filters__item 
                                .filters__item-title Màu sắc 
                                .filters__item-box  
                                    .filters__item-choose
                                        input(type="checkbox" name="color" value="Xám" id="gray")
                                        label(for="gray") Xám
                                    .filters__item-choose 
                                        input(type="checkbox" name="color" value="Đen" id="black")
                                        label(for="black") Đen
                                    .filters__item-choose 
                                        input(type="checkbox" name="color" value="Trắng" id="white")
                                        label(for="black") Trắng

                        .filters__list 
                            .filters__item 
                                .filters__item-title Kích thước 
                                .filters__item-box  
                                    .filters__item-choose
                                        input(type="checkbox" name="size" value="Nhỏ" id="small")
                                        label(for="duc") Nhỏ
                                    .filters__item-choose 
                                        input(type="checkbox" name="size" value="Vừa" id="fit")
                                        label(for="caic") Vừa
                                    .filters__item-choose 
                                        input(type="checkbox" name="size" value="Lớn" id="big")
                                        label(for="caic") Lớn    

                .layout-product__right
                    .box-head
                        .box-head__left
                            h2.box-head__title Chó Nhỏ
                        .box-head__filters
                            img(src="assets/images/icon-filters.svg", alt="")
                            span Bộ lọc

